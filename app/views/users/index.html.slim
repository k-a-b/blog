.user
  .body
    <hr>
    <div class="container bootstrap snippet">
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table user-list">
                                <thead>
                                    <tr>
                                    <th><span>User</span></th>
                                    <th><span>Email</span></th>
                                    <th class="text-center"><span>Number of posts</span></th>
                                    <th><span>Created</span></th>
                                    <th><span>Actions</span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    - @users.each do |user|
                                      <tr>
                                        <td>
                                            <img src="https://bootdey.com/img/Content/user_1.jpg" alt="">
                                            <span class="user-link">#{user.name}</span>
                                            -if user.moderator == true
                                              <span class="user-subhead">Admin</span>
                                            - else
                                              <span class="user-subhead">Member</span>
                                        </td>
                                        <td>
                                            <span class="label label-default">#{user.email}</span>
                                        </td>
                                        <td class="text-center">
                                          <div class="label label-default">Messages</div>
                                            = user.messages.count
                                          <div class="label label-default">Comments</div>
                                            = user.comments.count
                                        </td>
                                        <td>#{user.created_at.strftime("%m/%d/%Y")}</td>
                                        <td style="width: 15%;">
                                            <a href="#{user_path(user)}" class="table-link">
                                              <span class="fa-stack">
                                                <i class="fas fa-user-circle fa-lg" style="color:Black"></i>
                                              </span>
                                            </a>
                                            <a href="#{edit_user_path(user)}" class="table-link">
                                              <span class="fa-stack">
                                                <i class="fas fa-cog fa-lg" style="color:Black"></i>
                                              </span>
                                            </a>
                                            <a href="#" class="table-link danger">
                                              = link_to user, data: { confirm: 'Are you sure?' }, method: :delete
                                                <span class="fa-stack">
                                                  <i class="fas fa-times-circle fa-lg" style="color:Black"></i>
                                                </span>
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="#{new_user_path}" class="btn btn-secondary btn-block active" role="button" aria-pressed="true">Add new user</a>
